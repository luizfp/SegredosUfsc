<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="horizontal"
    android:padding="8dp">

    <FrameLayout
        android:id="@+id/layout_inicial_nome"
        android:layout_width="@dimen/bg_inicial_nome_comentario"
        android:layout_height="@dimen/bg_inicial_nome_comentario"
        android:background="@color/segredo_bg_1">

        <TextView
            android:id="@+id/txt_inicial_nome"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|center_horizontal"
            android:gravity="center"
            android:text="T"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_comentario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="@integer/max_lines_comentario"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:text="Confesso que sou gay e estava de boas na cama iniciando um sexo. Do nada, o outro casa se levanta,pega um spray verde e borrifa na boca. Em seguida, pergunta se eu quero. Pergunto o que é. Diz que menta, pra tirar o gosto do cigarro. Fico com medo, achando que pode ter um boa noite cinderela diluído dentro. Não uso. O foda era que sempre que ele ia me beijar desviava com medo. Ao fim, transamos sem beijos. Que chato isso."
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_curso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                android:text="Engenharia Elétrica"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/txt_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txt_curso"
                android:layout_alignBottom="@+id/txt_curso"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:text="23/08/2016 às 20h54"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="10sp" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
